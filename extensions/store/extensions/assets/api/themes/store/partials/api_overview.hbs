<legend>Production and Sandbox URLs:</legend>
<forum class='form-horizontal'>
	<div class='control-group'>
		<input class='input-xxlarge' type='text' disabled/>	
	</div>
	<div class='control-group'>
		<input class='input-xxlarge' type='text' disabled/>		
	</div>
</forum>
<legend>Share:</legend>
<div class='tabbable'>
	<ul class='nav nav-tabs btn-group'>
		<li class='btn'><a href='#api-social-buttons' data-toggle='tab'>Social Sites</a></li>
		<li class='btn'><a href='#api-embed' data-toggle='tab'>Embed</a></li>
		<li class='btn'><a href='mailto:?Subject={{assets.name}}'><i class='icon-envelope'></i> Email</a></li>
	</ul>
	<!--div class='btn-group nav nav-tabs'>
		<button class='btn'>Social sites</button>
		<button class='btn'>Embedded</button>
		<button class='btn'><i class='icon-envelope'></i>Email</button>
	</div-->

	<div class='tab-content'>
		<div id='api-social-buttons' class='tab-pane active'>
			{{> api_social_buttons .}}
		</div>
		<div id='api-embed' class='tab-pane'>
			{{> api_embed_snippet .}}
		</div>
	</div>
</div>


<legend>Comments</legend>
<div>
                         {{#if features.social.enabled}}
                            <iframe name="socialIfr" id="socialIfr"
                                src="{{features.social.keys.socialAppUrl}}?target={{rxt.shortName}}:{{assets.id}}&user={{cuser.username}}"
                                width="100%" height="100%" style="height: 300px;" data-script="{{features.social.keys.socialScriptSource}}" data-script-type="{{features.social.keys.socialScriptType}}"></iframe>
                         {{/if}}
                        {{#if inDashboard}}
                             <div id="comment-content" class="content"></div>
                        {{else}}
                            <div id="comment-content" class="content user-review"></div>
                        {{/if}}
 </div>
